{
  "name": "builds-canada-discord-bot",
  "version": "1.0.0",
  "description": "Discord bot for Build Canada community with AI-powered digest notifications",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "test": "vitest run"
  },
  "keywords": [
    "discord",
    "bot",
    "digest",
    "openai"
  ],
  "author": "Build Canada",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "cron-parser": "^4.9.0",
    "cron-validator": "^1.3.1",
    "discord.js": "^14.24.2",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "mongoose": "^8.7.2",
    "node-cron": "^3.0.3",
    "openai": "^4.67.3"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.8.6",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "eslint": "^9.13.0",
    "globals": "^16.5.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vitest": "^4.0.6"
  }
}
